<body>
<header>
<%= render "shared/header" %>
</header>
<main>
<%= form_with(model: @medicinelist, local: true) do |form| %>
 <div class="lists">
    <div class="list-names">薬の名前</div>
    <%= form.text_field :name,class:"list-name" %>
    <div class="list-numbers">錠数</div>
    <%= form.text_field :number,class:"list-number" %>
    <%= form.collection_select(:timing_id, Timing.all, :id, :name, {}, {class:"timing-select"}) %>

<div class="submit-list">
<input type="submit" value="記録する" class="send-list">
</div>

<div class="tiiming-morning">朝</div>
<% @medicinelistmorning.each do |medicinelist| %>
  <%= medicinelist.name %>
  <%= medicinelist.number %>
<% end %>


<div class="tiiming-afternoon">昼</div>
<% @medicinelistafternoon.each do |medicinelist| %>
  <%= medicinelist.name %>
  <%= medicinelist.number %>
<% end %>
<div class="tiiming-evening">夕</div>
<% @medicinelistevening.each do |medicinelist| %>
  <%= medicinelist.name %>
  <%= medicinelist.number %>
<% end %>

<div class="tiiming-morning">寝</div>
<% @medicinelistbeforesleep.each do |medicinelist| %>
  <%= medicinelist.name %>
  <%= medicinelist.number %>
<% end %>

<%end%>
</main>
<footer>
<%= render "shared/footer" %>
</footer>
</body>