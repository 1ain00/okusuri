<%= form_with(model: @medicine, local: true) do |form| %>
  <div class="name-edit">
    <div class="form-tag">薬の名前</div>
    <%= form.text_field :name %>
  </div>

    <div class="time-edit">
    <div class="form-tag">飲んだ時間</div>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="memo-edit">
    <div class="form-tag">メモ</div>
    <%= form.text_field :memo %>
  </div>
 

  <div class="img-upload">
    <div class="weight-bold-text">
      写真
    </div>
    <div class="click-upload">
    クリックしてファイルをアップロード
    <p>
  <%= form.file_field :image, id:"medicine-image" %>
  </p>
  </div>
    </div>

  <div class="submit-edit">
    <%= form.submit %>
  </div>
  <ul class="lists">
<li class="list-back">
<%= link_to '戻る', root_path %>
</li>
</ul>
<% end %>