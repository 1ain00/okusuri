<h1>追加する</h1>

<%= form_with(model: @medicine, local: true) do |form| %>

  <div class="title">
    <%= form.label :薬の名前 %>
    <%= form.text_field :name %>
  </div>

    <div class="time">
    <%= form.label :飲んだ時間 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label :メモ %>
    <%= form.text_field :memo %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>